<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.khetans.evening.gradecalculatorframework.engg_bput_cse_semester">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester !"
        android:id="@+id/button_sem1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="click_sem1"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester 2"
        android:id="@+id/button_sem2"
        android:layout_below="@+id/button_sem1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="click_sem2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester 3"
        android:id="@+id/button_sem3"
        android:layout_below="@+id/button_sem2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="click_sem3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester 4"
        android:id="@+id/button_sem4"
        android:layout_below="@+id/button_sem3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:onClick="click_sem4"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester 5"
        android:id="@+id/button_sem5"
        android:layout_below="@+id/button_sem4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="click_sem5"/>
</RelativeLayout>
